<% if flash.any? %>
  <% flash.each do |type, message| %>
    <p><%= message %></p>
  <% end %>
<% end %>

<% content_for :title, "Editing kitten" %>

<h1>Editing kitten</h1>

<%= render "form", kitten: @kitten %>

<br>

<div>
  <%= link_to "Show this kitten", @kitten %> |
  <%= link_to "Back to kittens", kittens_path %>

  <%= button_to "Destroy this kitten", @kitten, method: :delete %>
</div>
